    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascripts/chart.js"></script>
    <script>

        let pieCount
        let paymentType
        let months
        let ordersByMonth
        let revenueByMonth

        const getChartData = async () => {
            const response = await fetch('/admin/getChartData', {
                headers: { 'Content-Type': "application/json" },
            })

            const data = await response.json()

            months = data.months
            console.log(typeof months, months)
            ordersByMonth = data.odersByMonth
            revenueByMonth = data.revnueByMonth

            //graph functions
            salesGraph(months, ordersByMonth)
            revenue(months, revenueByMonth)
            revenue(months, revenueByMonth)

        }

        getChartData()


        async function getpieChartData() {
            await fetch("/admin/fetchpieChartData", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(
                    {}
                )
            }).then((res) => res.json()).then((res) => {
                pieCount = res.result.map(item => item.count);
                paymentType = res.result.map(item => item._id);
                orderpieChart(pieCount, paymentType)
            })
        }
        getpieChartData()

        function salesGraph(months, ordersByMonth) {
            const ctx = document.getElementById('myChart1');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: months,
                    datasets: [{
                        label: 'orders',
                        data: ordersByMonth,
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            })
        }


        function revenue(months, revenueByMonth) {
            const ctx1 = document.getElementById('myChart');
            new Chart(ctx1, {
                type: 'line',
                data: {
                    labels: months,
                    datasets: [{
                        label: '# Revenue',
                        data: revenueByMonth,
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
        function orderpieChart(pieCount, paymentType) {
            const ctx1 = document.getElementById('myChart3');
            new Chart(ctx1, {
                type: 'pie',
                data: {
                    labels: paymentType,
                    datasets: [{
                        label: '# Revenue',
                        data: pieCount,
                        borderWidth: 1,
                        backgroundColor: ['red', 'blue', 'green', 'yellow'],// Example color values for four payment types

                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
    </script>


